---
// src/pages/cv.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="CV | Ryan A. Moore">
  <div class="bg-white py-16">
    <div class="container mx-auto px-6 text-center">
      <div class="max-w-2xl mx-auto">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Curriculum Vitae</h1>
        <p class="text-lg text-gray-600 mb-8">
          For a detailed overview of my professional experience, skills, and accomplishments, please download my full CV.
        </p>
        <a 
          href="/Ryan-Moore-CV.pdf" 
          download
          class="inline-block bg-blue-600 text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:bg-blue-700 transition-colors duration-300 transform hover:-translate-y-1"
        >
          Download CV (PDF)
        </a>
      </div>
    </div>
  </div>
</Layout>